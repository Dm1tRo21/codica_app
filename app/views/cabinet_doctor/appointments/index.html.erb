
<div class="row">
  <div class="col-10">
    <h1>Appointments</h1>
  </div>
</div>
  
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Patient</th>
      <th scope="col">Phone</th>
      <th scope="col">Time</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @appointment.each do |v| %>
      <tr>
        <th scope="row"><%= i += 1 %></th>
        <td><%= "#{v.patient.first_name} #{v.patient.last_name}" %></td>
        <td><%= v.patient.phone %></td>
        <td><%= v.start_time %></td>
        <td><%= v.status %></td>
        <td><%= link_to "Close", edit_cabinet_doctor_appointment_path(id: v.id), class: "btn btn-outline-dark #{'disabled' if v.status  == 'closed' }" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
